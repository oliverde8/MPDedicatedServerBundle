{# oliverde8MPDedicatedServerBundle:Block:server.widget.html.twig #}

<div class="{{ class }} data-uk-grid-margin"
     data-server-login="{{ login }}"
        data-server-info-url="{{ path('oliverde8_mp_dedicated_server_api_info', {'login' : login}) }}"
>
    <div class="uk-panel uk-panel-box">
        <div class="uk-panel-title  serverName ">
            <a href="{{ path(urlPath, {'login' : login}) }}" class="mp_server__info__name"></a>
            <sup><span class="mp_server__info__ladderServerLimitMax"></span>k</sup>
        </div>
        <div class="uk-panel-badge badge-online uk-badge-success">
            Online
        </div>

        <div class="uk-grid">
            <div class="uk-width-1-1">
                <div class="currentMap">
                    <span class="mp_server__info__currentMap__name"></span> by <span class="mp_server__info__currentMap__author"></span>
                </div>
            </div>
        </div>

        <div class="uk-grid uk-grid-divider uk-margin-small-top">
            <div class="uk-width-1-3 players">
                <i class="uk-icon-user"></i>
                <span class="mp_server__info__nbPlayers"></span>/<span class="mp_server__info__currentMaxPlayers"></span>
            </div>
            <div class="uk-width-1-3 spectators">
                <i class="uk-icon-eye"></i>
                <span class="mp_server__info__nbSpectators"></span>/<span class="mp_server__info__currentMaxSpectators"></span>
            </div>
            <div class="uk-width-1-3 mapCount">
                <i class="uk-icon-flash"></i>
                0
            </div>
        </div>
    </div>
</div>